#:kivy 1.11.1
#:import tr __main__.tr

<Front1>:
    PageLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: tr._('BMI')
                size: self.texture_size
            GridLayout:
                cols: 5
                Label:
                    id: bh
                    text: tr._('Height :')
                TextInput: 
                    id: profile_height_integerpart
                    input_filter: 'int'
                    multiline: False
                    on_text_validate: root.displayBMI()
                Label:
                    text: tr._('Meter')
                TextInput:
                    input_filter: 'int'
                    id: profile_height_decimalpart
                    multiline: False
                    on_text_validate: root.displayBMI()
                Label:
                    text: tr._('Centimeter')
                Label:
                    text: tr._('Weight :')
                TextInput: 
                    input_filter: 'int'    
                    id: profile_weight_integerpart
                    multiline: False
                    on_text_validate: root.displayBMI()
                Label:
                    text: tr._('kilogram')
                TextInput:
                    input_filter: 'int'
                    id: profile_weight_decimalpart
                    multiline: False
                    on_text_validate: root.displayBMI()
                Label:
                    text: tr._('gram')
                Label:
                    text: tr._('Age :')
                TextInput:
                    input_filter: 'int'
                    id: profile_age
                    multiline: False
                    on_text_validate: root.displayBMI()
            GridLayout:
                cols: 2
                Label:
                    text: tr._('BMI (old formula) : ')
                Label:
                    id: bmi_value_old_formula
                    text: 'not enough data'
                Label:
                    text: tr._('BMI (new formula)')
                Label:
                    id: bmi_value_new_formula
                    text: tr._('not enough data')
