#:kivy 1.11.1
#:import tr __main__.tr

<KLabel@Label>:
    size: self.texture_size
    color: 0.2,0.8,0.5,1

<MainLabel@Label>:
    font_size: 30
    size: self.texture_size

<KTextInput@TextInput>:
    size_hint_max: (200, 30)
    size_hint_min: (150, 20)
    multiline: False


<Front1>:
    PageLayout:
        BoxLayout:
            orientation: 'vertical'
            MainLabel:
                text: tr._('BMI')
            GridLayout:
                cols: 2
                KLabel:
                    text: tr._('current profile')
                    size: self.texture_size
                KTextInput:
                    id: profile_name
                    text: tr._('default name')
                    on_text_validate: root.save()
            GridLayout:
                cols: 5
                KLabel:
                    text: tr._('Height :')
                KTextInput: 
                    id: profile_height_integerpart
                    input_filter: 'int'
                    on_text_validate: root.displayBMI()
                KLabel:
                    text: tr._('Meter')
                KTextInput:
                    input_filter: 'int'
                    id: profile_height_decimalpart
                    on_text_validate: root.displayBMI()
                KLabel:
                    text: tr._('Centimeter')
                KLabel:
                    text: tr._('Weight :')
                KTextInput: 
                    input_filter: 'int'    
                    id: profile_weight_integerpart
                    on_text_validate: root.displayBMI()
                KLabel:
                    text: tr._('kilogram')
                KTextInput:
                    input_filter: 'int'
                    id: profile_weight_decimalpart
                    on_text_validate: root.displayBMI()
                KLabel:
                    text: tr._('gram')
                KLabel:
                    text: tr._('Age :')
                KTextInput:
                    input_filter: 'int'
                    id: profile_age
                    on_text_validate: root.displayBMI()
            GridLayout:
                cols: 2
                KLabel:
                    text: tr._('BMI (old formula) : ')
                KLabel:
                    id: bmi_value_old_formula
                    text: 'not enough data'
                KLabel:
                    text: tr._('BMI (new formula)')
                KLabel:
                    id: bmi_value_new_formula
                    text: tr._('not enough data')
