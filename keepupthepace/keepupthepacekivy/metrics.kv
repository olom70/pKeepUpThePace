#:kivy 1.11.1
#:include force dclasses.kv
#:include force navigation.kv
#:import tr __main__.tr

<Metrics>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 109/255., 8/255., 57/255., 1
            Rectangle:
                pos: self.pos
                size: self.size
        Navigation:
        GridLayout:
            cols: 2
            KLabel:
                text: tr._('current profile')
                size: self.texture_size
            KTextInput:
                id: profile_name
                text: str(app.myProfile.profileName)
        GridLayout:
            cols: 5
            KLabel:
                text: tr._('Height :')
            KTextInput: 
                id: profile_height_integerpart
                input_filter: 'int'
                text: str(app.myProfile.heightIntegerPart)
            KLabel:
                text: tr._('Meter')
            KTextInput:
                input_filter: 'int'
                id: profile_height_decimalpart
                text: str(app.myProfile.heightDecimalPart)
            KLabel:
                text: tr._('Centimeter')
            KLabel:
                text: tr._('Weight :')
            KTextInput: 
                input_filter: 'int'    
                id: profile_weight_integerpart
                text: str(app.myProfile.weightIntegerPart)
            KLabel:
                text: tr._('kilogram')
            KTextInput:
                input_filter: 'int'
                id: profile_weight_decimalpart
                text: str(app.myProfile.weightDecimalPart)
            KLabel:
                text: tr._('gram')
            KLabel:
                text: tr._('Age :')
            KTextInput:
                input_filter: 'int'
                id: profile_age
                text: str(app.myProfile.age)